# ctrl + left/right
"\e[1;5C": shell-forward-word
"\e[1;5D": shell-backward-word

# meta + left/right
"\e[1;3C": forward-word
"\e[1;3D": backward-word

# page up/down
"\C-p": history-search-backward
"\C-n": history-search-forward

# ctrl + up/down
Tab: menu-complete
"\e[Z": menu-complete
"\e[1;5A": menu-complete
"\e[1;5B": menu-complete-backward

"\C-y": shell-expand-line

"\C-o": accept-line

set completion-ignore-case On

# option completion-prefix-display-length disables colors...
set colored-completion-prefix On

set menu-complete-display-prefix On

set visible-stats On

set show-all-if-ambiguous On
# set show-all-if-unmodified On

# Revert all history modification on enter
set revert-all-at-newline On
